<div class="left-side-nav">
	<h2>Welcome Admin</h2> <br />
	<a href="/admin_blogs" class="devise-links">Back to Blogs</a>
	<a href="/admin_dashboard" class="devise-links">Admin Dashboard</a>
	<%= link_to "Update Current Admin Info", edit_admin_registration_path, method: :get, class: "devise-links" %>
	<%= link_to "Create New Administrator", new_admin_registration_path, class: "devise-links" %>
	<%= link_to "Sign Out", destroy_admin_session_path, method: :delete, class: "devise-links" %>
</div>
<% if flash[:success_modal] %>
	<div class="success-modal">
		<%= flash[:success_modal] %>
	</div>
<% end %>
<div class="admin-blog-show">
	<form action="/admin_blog/<%= @blog.id %>" method="POST">
		<input type="hidden" name="_method" value="patch">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<textarea id="admin-blog-content" name="content"><%= @blog.content %></textarea>
		<textarea type="text" id="admin-blog-title" name="title"><%= @blog.title %></textarea> 
		<br />
		<%= image_tag @blog.photo.url %>">
		<input type="submit" value="Update Blog" class="blog-btn">
	</form>
		<a href="/admin_blog/<%= @blog.id %>" data-method="delete"><button class="blog-btn">Delete Blog</button></a>
</div>